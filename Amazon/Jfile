pipeline {
    agent any
    stages {
                              
        stage ('build') {
            
                steps {
                    dir ('Amazon'){                    
                    sh 'mvn clean install -Dskiptests'
                    }
                }
                
                    
            }
            
        
        
        stage ('test') {
          
                steps {
                    dir('/home/ak_linuxAzure/Downloads/tomcat_main/conf'){
                    
                        sh startup.sh
                        archiveArtifacts artifacts: 'Amazon/Amazon-Web/target/*.war', followSymlinks: false
                    }
            }
        }
        
        stage ('run') {
            steps {
                    //echo "Testing"
                    sh 'cp Amazon/Amazon-Web/target/*.war /home/ak_linuxAzure/Downloads/tomcat_main/webapps'
                
            }
        }
    }
}
