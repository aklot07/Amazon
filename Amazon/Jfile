pipeline {
    agent any
    stages {
                              
        stage ('build') {
            
                steps {
                    dir ('Amazon'){                    
                    sh 'mvn clean install -DSkipTests'
                    }
                }
                
                    
            }
            
        
        
        stage ('tomcat') {
          
                steps {                  
                        sh '/home/ak_linuxAzure/Downloads/tomcat_main/bin/catalina.sh run'
                        //archiveArtifacts artifacts: 'Amazon/Amazon-Web/target/*.war', followSymlinks: false
                    
            }
        }
        
        stage ('run') {
            steps {
                    //echo "Testing"
                    //sh 'rm -rf Amazon/Amazon-Web/target/*.war'
                    sh 'cp Amazon/Amazon-Web/target/*.war /opt/tomcat_main/webapps/'
                
            }
        }
    }
}
